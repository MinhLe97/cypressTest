{
  "dependencies": {
    "cypress": "^10.10.0",
    "mochawesome": "^7.1.3",
    "mochawesome-merge": "^4.2.0",
    "mochawesome-report-generator": "^5.2.0",
    "playwright-webkit": "1.34"
  },
  "scripts": {
    "cy:open": "npx cypress open",
    "cy:run": "npx cypress run && yarn generate-report",
    "combine-reports": "mochawesome-merge ${PWD}/mochawesome-report/*.json > ${PWD}/cypress/screenshots/report.json",
    "generate-report": "yarn combine-reports && npx marge ${PWD}/cypress/screenshots/report.json -f report -o ${PWD}/cypress/screenshots -- inline"
  }
}
